#include <stdio.h>

main ()
{
    int num;

    printf("Escreva um numero: ");
    scanf("%d", &num);

    if (num == 0)
        printf("\nO numero eh zero\n");
    else
        if (num < 0)
            printf("\nO numero eh negativo\n");
        else
            printf("\nO numero eh positivo\n");
