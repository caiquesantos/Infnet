#include <stdio.h>

main ()
{
    int dia, mes, ano;

    printf("Entre com uma data dia/mes/ano: ");
    scanf("%d/%d/%d", &dia, &mes, &ano);

    switch (mes)

    {
    case 1:
    case 3:
    case 5:
    case 7:
    case 8:
    case 10:
    case 12:
        if ((dia > 0) && (dia <= 31))
            printf("\nDia Valido\n");
        else
        {
            printf("\nDia Invalido\n");
            main ();
        }
        break;
    case 4:
    case 6:
    case 9:
    case 11:
    if ((dia > 0) && (dia <=30))
        printf ("\nDia VÃ¡lido\n");
    else
    {
        printf("\nDia Invalido\n");
        main ();
    }
    break;
    case 2:
        if ((dia > 0) && (dia <=28))
            printf("\nDia Valido\n");
        else
        {
            printf("\nDia Invalido\n");
            main ();
        }
        break;
    default:
        printf("\nMes Invalido\n");
        main ();
    }
    return 0;
}
